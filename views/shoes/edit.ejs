<% include ../partials/header %>

<div class = "container">
    <div class = "row">  
         <h1 style = "text-align: center"> EDIT <%=shoe.name%> </h1>
        <div style = "width: 30%; margin:25px auto"> 
            <form action = "/shoes/<%=shoe.id%>?_method=PUT" method = "POST">
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "shoe[name]" value = "<%=shoe.name%>">
                </div>
                <div class = "form-group">
                    <input class = "form-control"type = "text" name = "shoe[image]" value = "<%=shoe.image%>">
                </div>
                <div class = "form-group">
                    <input class = "form-control"type = "text" name = "shoe[description]" value = "<%=shoe.description%>">
                </div>
                <div class = "form-group">
                    <button class = "btn btn-lg btn-default btn-block btn-primary"> SUBMIT! </button>
                </div>
            </form>
            <a href = "/shoes">Back to our Shoe Collection!</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>