<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">ShoeReview</p>
            <div class="list-group">
                <li class="list-group-item active">Details!</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= shoe.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$150 average price</h4>
                    <h4><a><%=shoe.name%></a></h4>
                    <p><%= shoe.description %></p>
                    <p><em>Submitted by <%=shoe.author.username%></em></p>
                <% if(currentUser && shoe.author.id.equals(currentUser._id)){ %>    
                    <a href = "/shoes/<%=shoe._id%>/edit" class = "btn btn-warning">EDIT shoe</a>
                    <form style = "display:inline" action = "/shoes/<%=shoe._id%>?_method=DELETE" method = "POST">
                    <button class = "btn btn-danger"> Delete </button>
                    </form>
                 <% } %>    
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/shoes/<%= shoe._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% shoe.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %> 
                            </p>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                <a class = "btn btn-xs btn-warning" href = "/shoes/<%= shoe._id %>/comments/<%=comment._id%>/edit">Edit</a>
                                 <form style = "display:inline" action = "/shoes/<%=shoe._id%>/comments/<%=comment._id%>?_method=DELETE" method = "POST">
                                        <button class = "btn btn-xs btn-danger "> Delete </button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        
        
        
        
        
        
        
        
        
        
        </div>
    </div>
</div>