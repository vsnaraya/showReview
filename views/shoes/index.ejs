
<% include ../partials/header %>

<div class = "container">
    <header class = "jumbotron">
        <div class = "container">
            <h1>Welcome to our Shoes page!</h1>
            <p> Feel Free to view and add to our handpicked Shoes collection.</p>
            <p>
                <a href = "/shoes/new" class = "btn btn-primary btn-lg"> Submit a new Shoe to our collection! </a>
            </p>
        </div>
    </header>

    <div class = "row text-center" style ="display:flex; flex-wrap: wrap;" >
        <% shoes.forEach( function(shoe){ %>
            <div class = "col-md-3 col-sm-6">
                <div class = "thumbnail">
                    <img src = "<%= shoe.image %>">
                    <div class = "caption">
                        <h4> <%= shoe.name %></h4>
                    </div>
                    <p>
                        <a href = "/shoes/<%= shoe.id %>" class = "btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% });%>
    </div>


</div>
<% include ../partials/footer %>